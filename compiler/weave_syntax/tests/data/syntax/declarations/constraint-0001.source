public function SquareRoot![type T](
    in a: T
) -> T
where
    T: FloatingPoint
requires
{
    assert(a >= 0);
}
ensures (r)
{
    assert(r * r == a);
}
body
{
    if (a is Float32) {
        return sqrtf(a);
    } else if (a is Float64) {
        return sqrt(a);
    } else {
        bugcheck("Unsupported type");
    }
}

